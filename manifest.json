{
    "name": "Weather Check",
    "version": "1.0.0",
    "description": "Get updated news about weather",
    "manifest_version": 3,
    "author" : "Manu Shukla",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon1.png",
        "default_title": "Weather News"
    },
    "icons": {
        "16": "icon1.png", 
        "48": "icon2.png",
        "128": "icon3.png"
    },
    "permissions": ["activeTab"]

}